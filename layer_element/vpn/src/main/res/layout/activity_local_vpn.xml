<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocalVpnActivity">
    <EditText
        android:id="@+id/vpn_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="VPN"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/test_ip_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="80dp"
            android:fitsSystemWindows="true"
            android:imeOptions="actionNone"
            android:singleLine="true"
            android:text="192.168.2.249"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/test_port_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="80dp"
            android:fitsSystemWindows="true"
            android:imeOptions="actionNone"
            android:singleLine="true"
            android:text="10086"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/test_ip_edit_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST IP:"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/test_ip_edit_text"
            app:layout_constraintTop_toTopOf="@id/test_ip_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/test_ip_edit_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST PORT:"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/test_port_edit_text"
            app:layout_constraintTop_toTopOf="@id/test_port_edit_text"
            app:layout_constraintBottom_toBottomOf="@id/test_port_edit_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_vpn_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start VPN"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/stop_vpn_bt"/>

        <Button
            android:id="@+id/stop_vpn_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop VPN"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/start_vpn_bt"/>

        <Button
            android:id="@+id/udp_client_test_vpn_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="onClick"
            android:text="Test UDP Client"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_vpn_bt" />

        <Button
            android:id="@+id/tcp_client_test_vpn_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Client TCP"
            android:onClick="onClick"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/udp_client_test_vpn_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tcp_server_test_vpn_bt"/>

        <Button
            android:id="@+id/tcp_server_test_vpn_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="onClick"
            android:text="Test Server TCP"
            app:layout_constraintEnd_toStartOf="@id/tcp_client_test_vpn_bt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/udp_client_test_vpn_bt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>