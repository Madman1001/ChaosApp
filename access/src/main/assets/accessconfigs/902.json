{
  "version": "1",
  "permission": [
    {
      "title": "正在获取悬浮窗权限...",
      "type": "1",
      "priority": "1",
      "checkable": 1,
      "guide_animation_type": 0,
      "guide_text": [
        "开启【允许在其他应用的上层显示】"
      ],
      "intent": {
        "describe": "打开Android 6.0悬浮窗权限",
        "package": "com.android.settings",
        "action": "android.settings.action.MANAGE_OVERLAY_PERMISSION",
        "data": "$product_data",
        "new_data": "package:$new_product_data"
      },
      "action": [
        {
          "describe": "通用悬浮窗权限自动打开",
          "locate_node": {
            "find_texts": [
              "悬浮窗管理",
              "在其他应用上层显示",
              "允许在其他应用的上层显示",
              "允许许可",
              "允许出现在其他应用上",
              "允許拖動其他應用程式",
              "允许显示在其他应用的上层"
            ]
          },
          "click_node": {
            "class_name": "android.widget.TextView"
          },
          "operation_node": {
            "behavior": "click"
          }
        }
      ]
    },
    {
      "title": "正在获取通知栏权限...",
      "type": "2",
      "priority": "1",
      "checkable": 1,
      "guide_animation_type": 0,
      "guide_text": [
        "找到【闪音】并开启"
      ],
      "intent": {
        "describe": "打开通知栏权限(nexus,sony,motorola, miv7)",
        "package": "com.android.settings",
        "action": "android.settings.ACTION_NOTIFICATION_LISTENER_SETTINGS"
      },
      "action": [
        {
          "describe": "通用修改通知监听权限第一步",
          "need_wait_window": false,
          "locate_node": {
            "find_texts": [
              "$product_name"
            ]
          },
          "scroll_node": {
            "class_name": "android.widget.ListView"
          },
          "click_node": {
            "class_name": "android.widget.CheckBox"
          },
          "check_node": {
            "correct_status": false
          },
          "operation_node": {
            "behavior": "click"
          }
        },
        {
          "describe": "通用开启监听通知权限第二步",
          "need_wait_window": true,
          "need_wait_time": 1,
          "not_need_perform_back": "true",
          "locate_node": {
            "find_texts": [
              "确定",
              "确认",
              "允许",
              "是 ",
              "yes",
              "允許"
            ],
            "index":1
          },
          "click_node": {
            "class_name": "android.widget.Button"
          },
          "operation_node": {
            "behavior": "click"
          }
        }
      ]
    },
    {
      "title": "修改系统设置",
      "type": "31",
      "priority": "0",
      "checkable": 1,
      "guide_animation_type": 0,
      "guide_text": [
        "开启【允许修改系统设置】"
      ],
      "intent": {
        "describe": "通用修系统设置",
        "action": "android.settings.action.MANAGE_WRITE_SETTINGS",
        "data": "$product_data",
        "new_data": "package:$new_product_data"
      },
      "action": [
        {
          "describe": "通用修改系统设置",
          "not_need_perform_back": "true",
          "locate_node": {
            "find_texts": [
              "允许修改系统设置",
              "允许许可",
              "允許修改系統設定",
              "更改系统设置",
              "修改系统设置"
            ]
          },
          "click_node": {
            "class_name": "android.widget.TextView"
          },
          "operation_node": {
            "behavior": "click"
          }
        }
      ]
    }
  ]
}