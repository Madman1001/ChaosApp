<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageButton
        android:id="@+id/snake_left"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/round_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toTopOf="@id/snake_down"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center"/>

    <ImageButton
        android:id="@+id/snake_right"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/round_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toTopOf="@id/snake_down"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"/>
    <ImageButton
        android:id="@+id/snake_up"
        android:src="@drawable/ic_arrow_up"
        android:background="@drawable/round_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/snake_right"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"/>

    <ImageButton
        android:id="@+id/snake_down"
        android:src="@drawable/ic_arrow_down"
        android:background="@drawable/round_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"/>

    <ImageButton
        android:id="@+id/snake_auto"
        android:background="@drawable/ic_auto_false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/snake_right"
        app:layout_constraintTop_toTopOf="@id/snake_right"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"/>
</androidx.constraintlayout.widget.ConstraintLayout>